# Multi-Pair Trading Bot Configuration
# This configuration allows running multiple trading pairs independently

# =============================================================================
# GLOBAL CONFIGURATION
# =============================================================================

# Binance API Configuration
BINANCE_API_KEY=your_api_key_here
BINANCE_SECRET_KEY=your_secret_key_here
BINANCE_TESTNET=true

# Active Trading Pairs (comma-separated)
# Each pair will run in its own instance
ACTIVE_PAIRS=ADAUSDT,ETHUSDT

# System Configuration
PRICE_UPDATE_INTERVAL=20
HISTORICAL_4H_DAYS=180
HISTORICAL_1H_DAYS=7
HISTORICAL_15M_DAYS=1

# Global Dynamic Levels (applies to all pairs)
USE_DYNAMIC_LEVELS=true

# Global Balance Configuration
# Used as fallback if dynamic balance detection fails
